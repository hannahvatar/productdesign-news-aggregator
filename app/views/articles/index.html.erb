<!-- Add this near the top of your view -->
<div style="background-color: yellow; padding: 10px;">
  <h3>Debug Information</h3>
  <p>Full Params: <%= params.inspect %></p>
  <p>Selected Source: <%= params[:source].inspect %></p>
  <p>Total Articles: <%= @articles.count %></p>
  <p>Sources: <%= @sources.inspect %></p>
  <p>Date Range: <%= @start_date %> to <%= @end_date %></p>
</div>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Test Product Design News Aggregator</h1>

  <div class="mb-8 bg-white rounded-lg shadow p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold">Filter & Control</h2>
    </div>

    <%= form_tag articles_path, method: :get, class: "flex flex-wrap gap-4" do %>
      <div>
        <%= label_tag :source, "Source:", class: "block mb-1" %>
        <%= select_tag :source,
                      options_for_select(['All Sources'] + @sources, params[:source]),
                      include_blank: false,
                      class: "p-2 border rounded",
                      onchange: "this.form.submit();" %>
      </div>

      <div>
        <%= label_tag :start_date, "From:", class: "block mb-1" %>
        <%= date_field_tag :start_date, params[:start_date] || "2025-01-01", class: "p-2 border rounded" %>
      </div>

      <div>
        <%= label_tag :end_date, "To:", class: "block mb-1" %>
        <%= date_field_tag :end_date, params[:end_date] || Date.today, class: "p-2 border rounded" %>
      </div>

      <div class="self-end">
        <%= submit_tag "Filter", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
      </div>
    <% end %>
  </div>

  <!-- Rest of the view remains the same -->
</div>
