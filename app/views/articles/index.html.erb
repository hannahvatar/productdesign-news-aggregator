<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Product Design News Aggregator</h1>

  <div class="mb-8 bg-white rounded-lg shadow p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold">Filter & Control</h2>

    </div>

    <%= form_tag articles_path, method: :get, class: "flex flex-wrap gap-4" do %>
      <div>
        <%= label_tag :source, "Source:", class: "block mb-1" %>
        <%= select_tag :source,
                      options_for_select(['All Sources'] + @sources, params[:source]),
                      include_blank: false,
                      class: "p-2 border rounded" %>
      </div>

      <div>
        <%= label_tag :start_date, "From:", class: "block mb-1" %>
        <%= date_field_tag :start_date, params[:start_date] || "2025-01-01", class: "p-2 border rounded" %>
      </div>

      <div>
        <%= label_tag :end_date, "To:", class: "block mb-1" %>
        <%= date_field_tag :end_date, params[:end_date] || Date.today, class: "p-2 border rounded" %>
      </div>

      <div class="self-end">
        <%= submit_tag "Filter", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
      </div>
    <% end %>
  </div>

  <!-- Article count display -->
  <div class="mb-4 flex justify-between items-center">
    <div class="bg-gray-100 rounded-lg px-4 py-2">
      <span class="font-medium">Total articles: </span>
      <span class="text-blue-600 font-bold"><%= @articles.count %></span>
      <% if params[:source].present? && params[:source] != "All Sources" %>
        <span> from <%= params[:source] %></span>
      <% end %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Title
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Source
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Published Date
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @articles.each do |article| %>
          <tr>
            <td class="px-6 py-4">
              <a href="<%= article.url %>" target="_blank" class="text-blue-600 hover:underline font-medium">
                <%= article.title %>
              </a>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= article.source %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= article.published_at.strftime("%B %d, %Y") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @articles.blank? %>
    <div class="mt-8 text-center">
      <p class="text-gray-500">No articles found. Try adjusting your filters or running the scraper.</p>
    </div>
  <% end %>
</div>
